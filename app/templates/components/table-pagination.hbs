<ul class="pagination">
    <li class="{{disabled isFirstPage true}}">
        <a href="#" {{action 'firstPage'}}><i class="fa fa-angle-double-left"></i> first</a>
    </li>
    <li class="{{disabled isFirstPage true}}">
        <a href="#" id="prev" {{action 'previousPage'}}><i class="fa fa-angle-left"></i> previous</a>
    </li>
  {{#each pages as |page|}}
      <li class="{{active page currentPage}}">
          <a href="#" {{action 'goToPage' page}}>{{page}}</a>
      </li>
  {{/each}}
    <li class="{{disabled isLastPage true}}">
        <a href="#" id="next" {{action 'nextPage'}}>next<i class="fa fa-angle-right"></i></a>
    </li>
    <li class="{{disabled isLastPage true}}">
        <a href="#" {{action 'lastPage'}}>last<i class="fa fa-angle-double-right"></i> </a>
    </li>
</ul>
<div class="clearfix"></div>